# API Configuration
API_VERSION=v1
API_PREFIX=/api
DEBUG=true  # for development environment

# Database Configuration
DATABASE_URL=${DATABASE_URL}
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}

# Security 
CORS_ORIGINS=http://localhost:3000
JWT_SECRET_KEY=your_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100  # Number of requests allowed
RATE_LIMIT_PERIOD=60    # Time period in seconds
REDIS_URL=${REDIS_URL}

# Email Use SendGrid SMTP details
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey  # This is always "apikey" for SendGrid
SENDGRID_API_KEY=your_api_key  # Use your actual API Key here
SMTP_FROM_EMAIL=prosuite@scalingsuccess.io  # Must be a verified sender
EMAIL_FROM_NAME=8thDegree

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes

# Metrics and Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp
ENABLE_METRICS=true     # Enable/disable Prometheus metrics

# Session Security
SESSION_COOKIE_SECURE=true      # Only send over HTTPS
SESSION_COOKIE_HTTPONLY=true    # Prevent JavaScript access
SESSION_COOKIE_SAMESITE=lax     # CSRF protection

# OpenAI Configuration
OPENAI_API_KEY=Your_open_api_key


